@model MOModels.UsersView
@{
    ViewBag.Title = "Kullanıcı Ekle";
    Layout = "~/Views/Shared/_Layout.cshtml";
    List<SelectListItem> YetkiList = (List<SelectListItem>)ViewData["Liste"];
}
<style>
    .validation-summary-errors {
        border: 2px #ff0000;
        background-color: #ed4141;
        border-radius: 4px;
    }

        .validation-summary-errors ul {
            list-style-type: none;
            padding: 10px;
            color: #ffffff;
        }
</style>
<link href="~/Content/login-register.css" rel="stylesheet" />
<link href="//maxcdn.bootstrapcdn.com/bootstrap/3.3.0/css/bootstrap.min.css" rel="stylesheet" id="bootstrap-css">
<script src="//maxcdn.bootstrapcdn.com/bootstrap/3.3.0/js/bootstrap.min.js"></script>
<script src="//code.jquery.com/jquery-1.11.1.min.js"></script>
<!------ Include the above in your HEAD tag ---------->
@using (Html.BeginForm())
{
    <div class="container">
        <h1 class="well">Kullanıcı Ekle</h1>
        <div class="col-lg-12 well">
            <div id="ortala" class="row col-lg-12">
                <div class="col-sm-3 form-group">
                    <label>E-mail</label>
                    @Html.TextBoxFor(model => model.Mail, new { @class = "form-control" })
                </div>
                <div class="col-sm-3 form-group">
                    <label>Kullanıcı Adı</label>
                    @Html.TextBoxFor(model => model.Username, new { @class = "form-control" })
                </div>
                <div class="col-sm-3 form-group">
                    <label>Şifre</label>
                    @Html.TextBoxFor(model => model.Password, new { @class = "form-control", type = "password" })
                </div>
                <div class="col-sm-3 form-group">
                    <label>Yetki</label>
                    @Html.TextBoxFor(model => model.Role, new { @class = "form-control"})
                </div>
            </div>

            <div class="row">
                <div class="col-sm-6 text-center">
                    <input type="submit" class="btn btn-block btn-info" value="Kaydet" />
                </div>
                <div class="col-sm-2">
                    @Html.ActionLink("Listeye Geri Dön", "Index", null, null, null, null, null, htmlAttributes: new { @class = "btn btn-warning",})
                </div>
            </div>

        </div>
    </div>
}



