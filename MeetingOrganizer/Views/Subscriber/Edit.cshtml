@model MOEntities.Subscriber


@{
    ViewBag.Title = "Toplantı Oluştur";
    Layout = "~/Views/Shared/_Layout.cshtml";
    List<SelectListItem> SubscriberList = (List<SelectListItem>)ViewData["Liste"];
}

<div class="container">
    <h3>Toplantı Oluştur</h3>
    @Html.ValidationSummary(true, "", new { @class = "text-danger" })
    <div class="col-md-10">
        @using (Html.BeginForm())
        {
            @Html.AntiForgeryToken()
            <div class="row">
                @Html.LabelFor(model => model.Name, htmlAttributes: new { @class = "control-label-col-md-2" })
                @Html.EditorFor(model => model.Name, new { htmlAttributes = new { @class = "form-control" } })<br />
                @Html.ValidationMessageFor(model => model.Name, "", new { @class = "text-deger" })
            </div>
            <div class="row">
                @Html.LabelFor(model => model.Surname, htmlAttributes: new { @class = "control-label-col-md-2" })
                @Html.EditorFor(model => model.Surname, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.Surname, "", new { @class = "text-deger" })
            </div>
            <br/>
            <div class="row">
                @Html.DropDownListFor(model => model.MeetingID, SubscriberList, "Katılmak istediğiniz toplantıyı Seçin", new { @class="form-control"})
                @Html.ValidationMessageFor(model => model.MeetingID, "", new { @class = "text-deger" })
            </div>
            <div class="row">
                @Html.ActionLink("Listeye Geri Dön", "Index", null, null, null, null, null, htmlAttributes: new { @class = "btn btn-danger", @style = "margin-top:10px" })
                <input type="submit" style="margin-top:10px" class="btn btn-primary" value="Kaydet" />

            </div>
        }
    </div>
    <div class="col-md-3">
        <p class="alert-danger">
            @if (!string.IsNullOrEmpty(ViewBag.HataMesaji))
            {
                @Html.Raw(ViewBag.HataMesaji);
            }
        </p>
    </div>
</div>


